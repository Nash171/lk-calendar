{
    "manifest_version": 2,

    "name": "LK Calendar",
    "description": "Sri Lanka's calendar with holidays",
    "version": "4.0",
    "icons":
    {
        "16": "images/logo-16.png",
        "128": "images/logo-128.png"
    },
    "browser_action":
    {
        "default_icon":
        {
            "16": "images/logo-16.png",
            "128": "images/logo-128.png"
        },
        "default_title": "LK Calendar"
    },
    "background":
    {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}